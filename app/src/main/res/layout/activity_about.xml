<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/About"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:background="#6200EE"
    android:layout_height="match_parent"
    >


        <TextView
            android:id="@+id/p1"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_marginTop="25dp"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-thin"
            android:paddingStart="16dp"
            android:text="About"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/p2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:fontFamily="serif-monospace"
            android:padding="8dp"
            android:text="This application is only for my personal use. I am thankful to Ms. Pooja Batra, Assistant Prof, AIIT for her constant guidance and encouragement provided in this project."
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="147dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toTopOf="@+id/p2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/p1"
            app:srcCompat="@drawable/domeicon" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Dome"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon" />

        <TextView
            android:id="@+id/creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="serif-monospace"
            android:inputType="textPersonName"
            android:text="Developer: Admitier"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/p2" />

</android.support.constraint.ConstraintLayout>